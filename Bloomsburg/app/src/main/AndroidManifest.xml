<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.colingreybosh.bloomsburg">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OkapiActivity"
            android:label="@string/okapi_name"
            android:parentActivityName="me.colingreybosh.bloomsburg.MainActivity"/>
        <activity
            android:name=".VowelActivity"
            android:label="@string/vowel_name"
            android:parentActivityName="me.colingreybosh.bloomsburg.MainActivity"/>
    </application>

</manifest>